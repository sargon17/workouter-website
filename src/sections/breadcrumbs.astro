---
interface Breadcrumb {
  label: string;
  href: string;
}

interface Props {
  path: Breadcrumb[];
}

const { path } = Astro.props as Props;
---
<nav class="text-sm" aria-label="Breadcrumb">
  <ol class="flex space-x-2 overflow-x-hidden">
    {path.map((crumb, index) => (
      <li class="flex items-center">
        {index > 0 && <span class="text-text-secondary mr-2">/</span>}
        {index === path.length - 1 ? (
          <span class="text-text-secondary font-semibold text-ellipsis text-nowrap max-w-40" aria-current="page">
            {crumb.label}
          </span>
        ) : (
          <a
            href={crumb.href}
            class="text-text-accent hover:underline underline-offset-4 text-ellipsis text-nowrap"
          >
            {crumb.label}
          </a>
        )}
      </li>
    ))}
  </ol>
</nav>
